<!doctype html>
<html lang="<%= locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= data.meta.title + " | " + title_translate %></title>
    <meta name="description" content="<%= data.meta.description || t('descriptions.#{current_page.data.title}') %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= data.meta.title + ' | ' + t('titles.#{current_page.data.title}') ||
    data.meta.title + ' | Holà' %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= config[:host] + '/' + current_page.url %>" />
    <meta property="og:image" content="<%= data.meta.image %>" />
    <meta property="og:description" content="<%= data.meta.description || t('descriptions.#{current_page.data.title}') %>" />
    <meta property="og:site_name" content="<%= data.meta.title %>" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="<%= data.meta.twitter %>">
    <meta name="twitter:title" content="<%= data.meta.title + ' | ' + t('titles.#{current_page.data.title}') ||
    data.meta.title + ' | Holà' %>">
    <meta name="twitter:description" content="<%= data.meta.description || t('descriptions.#{current_page.data.title}') %>">
    <meta name="twitter:creator" content="<%= data.meta.twitter %>">
    <meta name="twitter:image:src" content="<%= data.meta.image %>">

    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "https://cdn.snipcart.com/themes/2.0/base/snipcart.css" %>
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.5.0/tiny-slider.css" if is_current_path?('about') %>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <%= javascript_include_tag  "https://cdn.snipcart.com/scripts/2.0/snipcart.js",
        :id => "snipcart",
        "data-api-key" => ENV["SNIPCART_API_KEY"] %>
  </head>
  <body>
    <%= partial 'layouts/partials/header' %>
    <%= yield %>
    <%= partial 'layouts/partials/footer' %>

    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.5.0/min/tiny-slider.js" if is_current_path?('about') %>
    <%= javascript_include_tag "all" %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-113064441-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-113064441-1');
    </script>

  </body>
</html>
