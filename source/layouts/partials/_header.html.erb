<header <%= "class= big-header" if is_current_path?('/', '/en') %>>
  <% link_to uri_root_path do %>
    <%= image_tag('logo.svg', id: "logo") unless is_current_path?('/', '/en') %>
    <%= image_tag('logo-large.svg', id: "logo", class: "logo-large") if is_current_path?('/', '/en') %>
  <% end %>
  <div class="snipcart-summary">
    <a href="#" class="snipcart-checkout">
      <span class="snipcart-checkout-icon"></span>
      <span class="snipcart-total-items">0</span>
    </a>
  </div>
</header>

<nav>
  <ul>
    <% t('nav').each do |k, v| %>
      <li><%= nav_link v, t('paths.' + k.to_s) %></li>
    <% end %>
  </ul>
</nav>
